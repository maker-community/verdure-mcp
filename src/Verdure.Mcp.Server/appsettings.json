{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "_comment": "Use environment variables in production: ConnectionStrings__DefaultConnection",
    "DefaultConnection": "Host=localhost;Database=verdure_mcp;Username=postgres;Password=postgres"
  },
  "AzureOpenAI": {
    "_comment": "Use environment variables in production: AzureOpenAI__Endpoint, AzureOpenAI__ApiKey",
    "Endpoint": "https://your-resource.openai.azure.com/",
    "ApiKey": "your-api-key-here",
    "DeploymentName": "dall-e-3",
    "ApiVersion": "2024-02-01"
  },
  "Email": {
    "_comment": "Use environment variables in production for SmtpUsername and SmtpPassword",
    "SmtpHost": "smtp.example.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-username",
    "SmtpPassword": "your-password",
    "UseSsl": true,
    "FromEmail": "noreply@example.com",
    "FromName": "Verdure MCP"
  },
  "Authentication": {
    "RequireToken": true
  }
}
