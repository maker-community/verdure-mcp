@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IStringLocalizer<SharedResources> L
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<MudLayout Style="min-height: 100vh; display: flex; flex-direction: column;">
    <MudAppBar Elevation="0" Style="border-bottom: 1px solid rgba(0, 0, 0, 0.12);">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@DrawerToggle" />
        <MudText Typo="Typo.h6" Class="ml-3 d-none d-sm-block" Style="font-weight: 500;">@L["PlatformName"]</MudText>
        <MudText Typo="Typo.h6" Class="ml-3 d-block d-sm-none" Style="font-weight: 500;">@L["AppName"]</MudText>
        <MudSpacer />       
        
        <CultureSelector TextColor="#FFFFFF" />
        
        <AuthorizeView>
            <Authorized>
                <MudMenu Icon="@Icons.Material.Filled.Person" Color="Color.Inherit">
                    <MudMenuItem Icon="@Icons.Material.Filled.AccountCircle" OnClick="@(() => Navigation.NavigateTo("/profile"))">
                        @L["Nav_PersonalCenter"]
                    </MudMenuItem>
                    <MudMenuItem Icon="@Icons.Material.Filled.Key" OnClick="@(() => Navigation.NavigateTo("/tokens"))">
                        @L["Nav_ApiKey"]
                    </MudMenuItem>
                    <MudDivider />
                    <MudMenuItem Icon="@Icons.Material.Filled.Logout" OnClick="@HandleLogout">
                        @L["Logout"]
                    </MudMenuItem>
                </MudMenu>
            </Authorized>
            <NotAuthorized>
                <MudButton Variant="Variant.Text" Color="Color.Inherit" 
                           OnClick="@(() => Navigation.NavigateTo("authentication/login"))"
                           Style="text-transform: none; font-weight: 500;">
                    @L["Login"]
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="0" 
               Style="border-right: 1px solid rgba(0, 0, 0, 0.12);">
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent Style="display: flex; flex-direction: column; flex: 1; min-height: 0; background-color: #F5F5F9;">
        <div style="flex: 1; padding: 1rem;">
            <MudContainer MaxWidth="MaxWidth.Large" Class="my-6 pt-6">
                @Body
            </MudContainer>
        </div>
        
        <Footer IsCompact="true" />
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = false;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }

    private void HandleLogout()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }
}
